<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:core="sap.ui.core" core:require="{ formatMessage: 'sap/base/strings/formatMessage' }"
   xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
   <Shell>
      <App>
         <pages>
            <Page title="{App>homePageTitle}">
               <content>
                  <Panel headerText="{App>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
                     <content>
                        <Button
                           text="{App>showHelloButtonText}"
                           press=".onShowHello" 
                           class="sapUiSmallMarginEnd"/>
                        <!-- La stringa helloMsg vive nella risorsa "App" impostata dal controller,
                        mentre il nome da salutare vive nel modello corrente, ergo nessun prefisso! -->
                        <Input 
                           value="{/recipient/name}" 
                           valueLiveUpdate="true" 
                           width="60%"/>
                        <Text 
                           text="{ parts: [
                              'App>helloMsg',
                              '/recipient/name'
                              ],
                              formatter: 'formatMessage'}" class="sapUiSmallMargin"/>
                     </content>
                  </Panel>
               </content>
            </Page>
         </pages>
      </App>
   </Shell>
</mvc:View>