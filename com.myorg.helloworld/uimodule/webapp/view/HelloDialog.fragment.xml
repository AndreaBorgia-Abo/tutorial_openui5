<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" core:require="{ formatMessage: 'sap/base/strings/formatMessage' }" >
   <Dialog
      id="helloDialog"
      title="{ parts: [
                            'App>helloMsg',
                            '/recipient/name'
                          ],
                          formatter: 'formatMessage'}">
      <beginButton>
         <Button
            text="{App>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      </beginButton>
   </Dialog>
</core:FragmentDefinition>